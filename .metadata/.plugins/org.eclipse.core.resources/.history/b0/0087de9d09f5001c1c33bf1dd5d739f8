#include "question.hpp"


void Question::print() const
{
	std::cout << "Question: " << text << '\n';
	std::cout << "Answer: " << ans << '\n';
}

void Question::print_child() const
{
	std::cout << "|\n";
	std::cout << "==";
	std::cout << "Question: " << text << '\n';
	std::cout << "  Answer: " << ans << '\n';
}

void print_children(std::vector<Question> qv, std::map<int, std::vector<Question>> &mp)
{
	for(int i=1; i<qv.size(); i++){
		qv[i].print();
		print_children(mp[qv[i].id], mp);
	}
}
