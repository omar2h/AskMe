#ifndef APP_HPP_
#define APP_HPP_

struct App{
	/**
	 * Main app run function
	 *
	 * @param non
	 * @return non
	 */
	void run();

	/**
	 * verify login user input choice at login menu choice should be 1-3
	 *
	 * @param user choice
	 * @return whether choice is correct or not
	 */
	bool verify_login_choice(int);

	/**
	 * displays first menu login
	 *
	 * @param non
	 * @return user choice
	 */
	int menu_login();
};



#endif /* APP_HPP_ */
